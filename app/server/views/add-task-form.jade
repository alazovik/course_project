
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container.center-vertical
	form(method="post")#account-form.form-horizontal.well
		h2
		h6#sub1 Здесь вы можете опубликовать новую задачу.
		hr
		.form-group
			label.control-label.col-sm-3 Заголовок
			.col-sm-9
				input.form-control#title(name='title')
		.form-group
			label.control-label.col-sm-3 Текст
			.col-sm-9
				textarea.form-control#text(name='text')

		.form-group
			label.control-label.col-sm-3 Правильный ответ
			.col-sm-9
				input.form-control#correct-answer(type='text', name='correct-answer')

		hr
		.form-buttons
			button(type='submit')#publish-task-btn.btn.btn-primary
		.clearfix

// display form errors in a custom modal window //

include modals/form-errors
